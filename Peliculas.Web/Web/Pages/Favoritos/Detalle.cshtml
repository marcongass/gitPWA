@page
@model Web.Pages.Favoritos.DetalleModel
@{
}

<h1>Detalle Favorito</h1>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelo=>Model.favorito.idMedia)</h5>
                    <p class="card-text">
                        <span class="fw-bold">@Html.DisplayNameFor(modelo => Model.favorito.Puntuacion): </span> @Html.DisplayFor(modelo => Model.favorito.Puntuacion)
                        <span class="fw-bold">@Html.DisplayNameFor(modelo => Model.favorito.Comentario): </span>@Html.DisplayFor(modelo => Model.favorito.Comentario)
                    </p>
                </div>
            </div>
        </div>
    </div>
    <a type="button" class="btn btn-primary" asp-page="./Index">Volver</a>
    <a type="button" class="btn btn-success" asp-page="./Editar" asp-route-id="@Model.favorito.idFavorito">Editar</a>
</div>